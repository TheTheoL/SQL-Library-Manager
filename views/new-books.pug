doctype html
head
  title New Book
  link(rel='stylesheet', href='/stylesheets/style.css')
h1 New Book
form
  p
    label(for='title') Title
    input#title(name="title" type="text" id="title" value=book.title)
  p
    label(for='author') Author
    input#author(name="author" type="text" id="author" value=book.author)
  p
    label(for='genre') Genre
    input#genre(name="genre" type="text" id="genre" value=book.genre)
  p
    label(for='year') Year
    input#year(name="year" type="text" id="year" value=book.year)
  p
    input(type="submit" value="Create New Book")
  p
    a.button(href='all_books.html' onclick="focusInput()") Cancel