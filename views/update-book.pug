extends layout

block content
  h1 Update Book
  form(method="post")
  
  p
    label(for='title') Title
    input#title(name="title" type="text" id="title" value=book.title)
  p
    label(for='author') Author
    input#author(name="author" type="text" id="author" value=book.author)
  p
    label(for='genre') Genre
    input#genreinput(name="genre" type="text" id="genre" value=book.genre)
  p
    label(for='year') Year
    input#year(name="year" type="text" id="year" value=book.year)
  p
    input(type='submit' value='Update Book')
form(method='post' action='/books/8/delete' onsubmit="return confirm('Do you really want to delete this book?');")
  p
    a.button(href="/") Cancel
  p
    input(type='submit' value='Delete Book')